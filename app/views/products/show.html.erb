<section class="products-show">

  <header class="page-header">
    <h4><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h4>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-6">
        <%= image_tag @product.img_url, alt: @product.name, class: 'main-img' %>
      </div>

      <div class="col-sm-6">
        <h2 class="text"><%= @product.name %></h2>
        <p class="text price"><%= humanized_money_with_symbol @product.price %></p>
        <p class="text description"><%= @product.description %></p>

        <%= button_to add_item_cart_path(product_id: @product.id), class: 'btn btn-primary' , method: :post do %>
          <%= fa_icon "shopping-cart", text: 'Add to Cart' %>
        <% end %>
      </div>
    </div>

  </article>

</section>
