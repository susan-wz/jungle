<section class="user-new">

  <div class="box-outline">
    <div class="center-header">
      <h2>Register</h2>
    </div>

    <%= form_for @user, validate: true, url: '/users', :html => {:class => "form-horizontal center"} do |f| %>
      <div class="form-group row">
        <%= f.label :first_name, "First name: ", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :last_name, "Last name: ", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, "Email: ", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, "Password: ", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, "Password Confirmation: ", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
        <%= f.submit "Submit", class: "btn btn-default btn-primary btn-block" %>

      <% end %>
    </div>
  </div>

</section>